// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ----------------------------------------------------
// Rydberg Starck HRMS Models
// ----------------------------------------------------

model Employee {
  id           String @id @default(cuid()) // Unique ID for the employee
  name         String
  email        String @unique // Ensure no duplicate emails
  department   String // e.g., "Innovations", "Engineering"
  status       String // e.g., "Active", "Terminated"
  salary       Float // Using Float for currency
  hireDate     DateTime
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}